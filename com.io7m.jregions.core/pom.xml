<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.io7m.jregions</groupId>
    <artifactId>com.io7m.jregions</artifactId>
    <version>0.1.0</version>
  </parent>
  <artifactId>com.io7m.jregions.core</artifactId>

  <packaging>bundle</packaging>
  <name>com.io7m.jregions.core</name>
  <description>Area types (Core)</description>
  <url>http://io7m.github.io/jregions/</url>

  <scm>
    <url>${project.parent.scm.url}</url>
    <connection>${project.parent.scm.connection}</connection>
    <developerConnection>${project.parent.scm.developerConnection}</developerConnection>
  </scm>

  <dependencies>
    <dependency>
      <groupId>com.io7m.jnull</groupId>
      <artifactId>io7m-jnull-core</artifactId>
    </dependency>
    <dependency>
      <groupId>com.io7m.jaffirm</groupId>
      <artifactId>io7m-jaffirm-core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.immutables</groupId>
      <artifactId>value</artifactId>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Generate sources -->
      <plugin>
        <groupId>com.webguys</groupId>
        <artifactId>string-template-maven-plugin</artifactId>
        <executions>

          <execution>
            <id>generate-BD</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>render</goal>
            </goals>
            <configuration>
              <templates>
                <template>
                  <directory>src/main/string-template</directory>
                  <name>PAreas</name>
                  <target>${project.build.directory}/generated-sources/string-template/com/io7m/jregions/core/parameterized/PAreasBD.java</target>
                  <properties>
                    <scalarType>java.math.BigDecimal</scalarType>
                    <areaType>PAreaBD</areaType>
                    <className>PAreasBD</className>
                    <splitXType>PAreaXSplitBD</splitXType>
                    <splitYType>PAreaYSplitBD</splitYType>
                    <opClass>PAreaBDOps</opClass>
                  </properties>
                </template>
              </templates>
            </configuration>
          </execution>

          <execution>
            <id>generate-BI</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>render</goal>
            </goals>
            <configuration>
              <templates>
                <template>
                  <directory>src/main/string-template</directory>
                  <name>PAreas</name>
                  <target>${project.build.directory}/generated-sources/string-template/com/io7m/jregions/core/parameterized/PAreasBI.java</target>
                  <properties>
                    <scalarType>java.math.BigInteger</scalarType>
                    <areaType>PAreaBI</areaType>
                    <className>PAreasBI</className>
                    <splitXType>PAreaXSplitBI</splitXType>
                    <splitYType>PAreaYSplitBI</splitYType>
                    <opClass>PAreaBIOps</opClass>
                  </properties>
                </template>
              </templates>
            </configuration>
          </execution>

          <execution>
            <id>generate-I</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>render</goal>
            </goals>
            <configuration>
              <templates>
                <template>
                  <directory>src/main/string-template</directory>
                  <name>PAreas</name>
                  <target>${project.build.directory}/generated-sources/string-template/com/io7m/jregions/core/parameterized/PAreasI.java</target>
                  <properties>
                    <scalarType>int</scalarType>
                    <areaType>PAreaI</areaType>
                    <className>PAreasI</className>
                    <splitXType>PAreaXSplitI</splitXType>
                    <splitYType>PAreaYSplitI</splitYType>
                    <opClass>PAreaIOps</opClass>
                  </properties>
                </template>
              </templates>
            </configuration>
          </execution>

          <execution>
            <id>generate-F</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>render</goal>
            </goals>
            <configuration>
              <templates>
                <template>
                  <directory>src/main/string-template</directory>
                  <name>PAreas</name>
                  <target>${project.build.directory}/generated-sources/string-template/com/io7m/jregions/core/parameterized/PAreasF.java</target>
                  <properties>
                    <scalarType>float</scalarType>
                    <areaType>PAreaF</areaType>
                    <className>PAreasF</className>
                    <splitXType>PAreaXSplitF</splitXType>
                    <splitYType>PAreaYSplitF</splitYType>
                    <opClass>PAreaFOps</opClass>
                  </properties>
                </template>
              </templates>
            </configuration>
          </execution>

          <execution>
            <id>generate-D</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>render</goal>
            </goals>
            <configuration>
              <templates>
                <template>
                  <directory>src/main/string-template</directory>
                  <name>PAreas</name>
                  <target>${project.build.directory}/generated-sources/string-template/com/io7m/jregions/core/parameterized/PAreasD.java</target>
                  <properties>
                    <scalarType>double</scalarType>
                    <areaType>PAreaD</areaType>
                    <className>PAreasD</className>
                    <splitXType>PAreaXSplitD</splitXType>
                    <splitYType>PAreaYSplitD</splitYType>
                    <opClass>PAreaDOps</opClass>
                  </properties>
                </template>
              </templates>
            </configuration>
          </execution>

          <execution>
            <id>generate-L</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>render</goal>
            </goals>
            <configuration>
              <templates>
                <template>
                  <directory>src/main/string-template</directory>
                  <name>PAreas</name>
                  <target>${project.build.directory}/generated-sources/string-template/com/io7m/jregions/core/parameterized/PAreasL.java</target>
                  <properties>
                    <scalarType>long</scalarType>
                    <areaType>PAreaL</areaType>
                    <className>PAreasL</className>
                    <splitXType>PAreaXSplitL</splitXType>
                    <splitYType>PAreaYSplitL</splitYType>
                    <opClass>PAreaLOps</opClass>
                  </properties>
                </template>
              </templates>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Check style -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>

      <!-- Produce OSGi bundle -->
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Export-Package>
              com.io7m.jregions.core,
              com.io7m.jregions.core.parameterized
            </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
